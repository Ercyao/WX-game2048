/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}


.theme{
  font-size: 60rpx;
}
.btn-box{
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  margin: 20rpx 0;
}
.btn-item{
  width: 220rpx;
  height:80rpx;
  line-height: 80rpx;
  background: #f0e0c9;
  border-radius: 5rpx;
  text-align: center;
}
.game-box{
  width: 600rpx;
  height:600rpx;
  background: #ccc0b2;
  border-radius: 10rpx;
  margin: 100rpx 0;
  padding: 10rpx;
}
.game-item{
  float: left;
  /* display: inline-block; */
  width: 135rpx;
  height: 135rpx;
  line-height: 135rpx;
  margin: 8rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 50rpx;
}
.game-item view{
  position:relative;
  width: 135rpx;
  height: 135rpx;
  border-radius: 10rpx;
}
.initial{
  background: #b6a99b;
}
.rogrid{
	animation:rogrid 0.3s  ease 1;
  -webkit-animation:rogrid 0.3s  ease 1; 
}
@keyframes rogrid{
	0%{transform:rotateY(20deg)}
  50%{transform:rotateY(80deg)}
  100%{transform:rotateY(20deg)}
}
@-webkit-keyframes rogrid{
	0%{transform:rotateY(20deg)}
  50%{transform:rotateY(80deg)}
  100%{transform:rotateY(20deg)}
}
